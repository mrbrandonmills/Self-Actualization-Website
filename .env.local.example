# =============================================================================
# Luxury Book Museum - Environment Variables Template
# =============================================================================
#
# INSTRUCTIONS:
# 1. Copy this file to .env.local
# 2. Fill in your actual values
# 3. NEVER commit .env.local to git
#
# =============================================================================

# -----------------------------------------------------------------------------
# Phase 0-4: Core Application (Required Now)
# -----------------------------------------------------------------------------

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="The Eternal Library"

# -----------------------------------------------------------------------------
# Phase 5: AI Integration (Required Later)
# -----------------------------------------------------------------------------

# OpenAI API (for AI companion and semantic search)
# Get your key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-proj-...

# Pinecone Vector Database (for semantic book search)
# Get your key from: https://app.pinecone.io
# PINECONE_API_KEY=...
# PINECONE_ENVIRONMENT=us-east1-gcp
# PINECONE_INDEX_NAME=books

# ElevenLabs Voice API (for AI voice companion - optional)
# Get your key from: https://elevenlabs.io
# ELEVENLABS_API_KEY=...
# ELEVENLABS_VOICE_ID=...

# -----------------------------------------------------------------------------
# Database (If needed in future phases)
# -----------------------------------------------------------------------------

# PostgreSQL Database
# DATABASE_URL=postgresql://user:password@localhost:5432/luxury_books

# Redis Cache (for AI response caching)
# REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Production)
# -----------------------------------------------------------------------------

# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=...

# Sentry Error Tracking
# SENTRY_DSN=...
# NEXT_PUBLIC_SENTRY_DSN=...

# PostHog Analytics
# NEXT_PUBLIC_POSTHOG_KEY=...
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------

# Enable/disable features during development
NEXT_PUBLIC_ENABLE_3D_FEATURES=true
NEXT_PUBLIC_ENABLE_SMOOTH_SCROLL=true
NEXT_PUBLIC_ENABLE_AI_COMPANION=false
NEXT_PUBLIC_ENABLE_SEMANTIC_SEARCH=false
NEXT_PUBLIC_ENABLE_VOICE_AI=false

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------

# Performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Debug mode
NEXT_PUBLIC_DEBUG_MODE=false
